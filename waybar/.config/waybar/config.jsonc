    "clock": {
        "format": "{:%I:%M %p}",
        "format-alt": "{:%A, %d %B}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "smooth-scrolling-threshold": 10,
        "calendar": {
            "mode-mon-col": 3,
        },
        "actions": {
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down",
            "on-click-right": "mode",
        },
    },
    "cpu": {
        "format": "{usage}% Ôãõ",
